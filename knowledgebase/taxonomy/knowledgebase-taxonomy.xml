        <encodingDesc>
            <classDecl>
                <taxonomy xml:id="taxonomy-kb">

                    <!--PLACES-->
                    <category xml:id="places">
                        <catDesc>Places - geographical or otherwise.</catDesc>
                        <category xml:id="places.geographical">
                            <catDesc>Geographical places.</catDesc>
                            <category xml:id="places.geographical.india">
                                <catDesc>Places in geographical India. <!--contemporary, historical, and mythological?--></catDesc>
                                <category xml:id="places.geographical.india.magadha">
                                    <catDesc>Places in Magadha</catDesc>
                                    <category xml:id="places.geographical.india.magadha.rājagṛha"/>
                                </category>
                            </category>
                        </category>
                    </category>

                    <!--NIDĀNA (should this be a subcategory of "places"? - perhaps on the same level, sibling to "Geographical")-->
                    <category xml:id="nidāna">
                        <catDesc>Nidāna</catDesc>
                        <category xml:id="nidāna.rājagṛha"/>
                    </category>

                    <!--PEOPLE-->
                    <category xml:id="persons">
                        <catDesc>Persons - historical humans or otherwise.</catDesc>
                        <category xml:id="persons.human">
                            <catDesc>Human persons. <!--historical and mythological?--></catDesc>
                            <category xml:id="persons.human.disciples">
                                <catDesc>Human disciples of the Buddha.</catDesc>
                                <category xml:id="persons.human.disciples.purna"> </category>
                                <category xml:id="persons.human.kings">
                                    <catDesc>Human kings. <!--historical and mytholocial?--></catDesc>
                                    <category xml:id="persons.human.kings.bimbisāra"> </category>
                                </category>
                            </category>
                        </category>
                    </category>

                    <!--FAUNA (should this be a subcategory of "terms"? - keep a concordance with our cumulative glossary?)-->
                    <category xml:id="fauna">
                        <catDesc>Fauna - all of the animal life present in a particular region or time. <!--empirical vs mythological?--></catDesc>
                        <category xml:id="fauna.kalandaka"> </category>
                    </category>

                </taxonomy>
            </classDecl>
