            <div type="glossary">
                <list type="glossary">
                    <item>
                        <gloss type="term" xml:id="UT22084-068-017-25">
                            <term type="translationMain">bodhisattva</term>
                            <term xml:lang="Sa-Ltn" type="sourceUnspecified">bodhisattva</term>
                            <term xml:lang="Bo-Ltn" type="attestedSource" n="1">byang chub sems dpa’</term>
